                 fncAjaxSessionExpired(XMLHttpRequest);
                 fncDetail('', '', '', null);
             }
         });
     }

     //Details
     function fncDetail(pHspCd, pEmpNo, pStdDt, obj) {
         fncTableRowSelect("tblList", obj);
         $.ajax({ url: "/INCU05/Detail_Content",
             cache: false,
             type: 'post',
             dataType: 'html',
             data: {
                 pHspCd: pHspCd,
                 pEmpNo: pEmpNo,
                 pStdDt: pStdDt
             },
