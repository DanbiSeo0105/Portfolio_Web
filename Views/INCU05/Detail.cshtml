     //History of employees
     function fncHstList(pHspCd, pEmpNo, pStdDt) {
         $.ajax({ url: "/INCU05/HstList",
             cache: false,
             type: 'post',
             data: {
                 pHspCd: pHspCd,
                 pEmpNo: pEmpNo,
                 pStdDt: pStdDt
             },
             dataType: 'html',
             success: function (data) {
                 $("#divHstList").html(data);
                 fncTable();
